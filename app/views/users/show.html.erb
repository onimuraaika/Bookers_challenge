<!--新規登録・ログイン後に表示されるマイページ画面-->
<!--仮のナビゲーションバー-->
<header class="navbar navbar-inverse">
  <div class="container">
  	<nav class="nav navbar-nav nabvbar-left">
  		<nav class="navbar-brand">Bookers</nav>
  	</nav>

    <nav>
  	  <ul class="nav navbar-nav navbar-right">
        <li class="nav-item">
          <%= link_to "Home", user_path(@user), class: "glyphicon glyphicon-home" %>
        </li>
        <li class="nav-item">
          <%= link_to "User", users_path, class: "glyphicon glyphicon-user" %>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/books"><span class="glyphicon glyphicon-book">Bookers</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/"><span class="glyphicon glyphicon-log-out">logout</a>
        </li>
      </ul>
    </nav>
  </div>
</header>




<div class="body">
  <div class="container">
    <!--<p id="notice">Welcome! You have signed up successfully.</p>ログイン・登録した時にでる-->
    <!--<p id="notice">You have updated user successfully.</p>更新した時にでる-->
    <div class="row">
      <div class="col-xs-3">
        <h2>User info</h2>
        <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>

        <table class="table">
          <tbody>
            <tr>
              <th>name</th> <!--ユーザー名表示-->
              <th><%= @user.name %></th>
            </tr>
            <tr>
              <th>introduction</th> <!--自己紹介文-->
              <th><%= @user.introduction %></th>
            </tr>
          </tbody>
        </table>

        <div class="row"> <!--編集画面へ-->
          <% if @user.id == current_user.id %>
            <%= link_to edit_user_path(@user), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench edit_user_id" %>
          <% end %>
        </div>

        <!--投稿フォーム-->
        <div>
          <h2>New book</h2>
<!--バリデーション︎を入れる-->
          <%= form_with model:@book, local:true do |f| %>
            <div class="field row">
              <%= f.label :title %>
              <%= f.text_field :title %>
            </div>
            <div class="field row">
              <%= f.label :body %>
              <%= f.text_area :body %>
            </div>
            <div class="actions row">
              <%= f.submit class: "btn btn-primary" %>
            </div>
          <% end %>
        </div>
      </div>

      <!--自分の投稿一覧-->
      <div class="col-xs-9">
        <h2>Books</h2>
        <table class="table table-hover table-inverse">
          <thead>
            <tr>
               <th><!--ProfileImage--></th>
               <th>Title</th>
               <th>Opinion</th>
               <th colspan="3"></th>
             </tr>
          </thead>
          <tbody>
            <td>
              <%= attachment_image_tag @user, :profile_image, :fill, 40, 40, format: 'jpeg', fallback: "no_image.jpg" %>
            </td>
            <td></td>
            <td></td>
          </tbody>
        </table>
      </div>
    </div>
  </div>

  <!--フッターの部分テンプレート-->
  <%= render 'homes/footer' %>

</div>