<!--プロフィール編集画面-->

<div>
  <div class="container">
    <!--<p id="notice"></p>--> <!--サクセスメッセージ-->
    
    <h2>User info</h2>
    <%= form_with model:@user, local:true do |f| %>
      <div class="field">
        <label for="user_name">Name</label> <!--ユーザー名-->
        <input class="name" type="text" id="user_name" class="form-control">
      </div>

      <div class="field">
        <label for="user-image">Image</label> <!--プロフィール-->
          <%= f.attachment_field :profile_image, placeholder: "Image", class: "user-edit-form" %>
      </div>

      <div class="field">
        <label for="user_introduction">Introduction</label>
        <input class="name" type="text">
      </div>
    <% end %>

  </div>
</div>



<!--プロフィール編集フォーム-->
<%= form_with model:@user, local:true do |f| %>
 <div>
    <%= f.label :name, "Name" %>
    <%= f.text_field :name %>

    <%= f.label :profile_image_id, "Image" %>
    <%= f.attachment_field :profile_image %>
    <%= attachment_image_tag @user, :profile_image, fallback: "no_image.jpg" %>


    <%= f.label :introduction, "Introduction" %>
    <%= f.text_field :introduction %>
</div>
<% end %>

<!--フッターの部分テンプレート-->
<%= render 'homes/footer' %>