<!--新規登録-->

<div class="body">
  <div class="container">

    <div class="row">
      <h2>Sign up</h2>

      <%= form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user', local: true do |f| %>
        <div class="error">
          <%= render "devise/shared/error_messages", resource: resource %>
        </div>

        <div class="field"> <!--ユーザー名を追加-->
          <%= f.label :name %><br />
          <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
        </div>

        <div class="field"> <!--メールを追加-->
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>

        <div class="field"> <!--郵便番号の追加-->
          <%= f.label :postal_code %><br />
          <%= f.text_field :postal_code %>
        </div>

        <div class="field"><!--都道府県入力-->
          <%= f.label :prefecture_code %><br>
          <%= f.collection_select :prefecture_code, JpPrefecture::Prefecture.all, :name, :name %>
        </div>

        <div class="field"><!--市区町村入力-->
          <%= f.label :city %><br>
          <%= f.text_field :city %>
        </div>

        <div class="field"><!--市区町村入力-->
          <%= f.label :street %><br>
          <%= f.text_field :street %>
        </div>


        <div class="field"> <!--パスワードを追加-->
          <%= f.label :password %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password" %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>

        <div class="actions">
          <%= f.submit "Sign up", class: "btn btn-success" %>
        </div>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>

  </div>
</div>



